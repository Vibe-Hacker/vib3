{
  "name": "vib3",
  "version": "2.0.0",
  "description": "VIB3 - Scalable Video Social Platform",
  "license": "ISC",
  "author": "Tavis Chaney",
  "private": true,
  "workspaces": [
    "microservices/*",
    "shared/*"
  ],
  "scripts": {
    "start": "node server.js",
    "start:mongodb": "node server-mongodb.js",
    "start:profile": "node server-profile.js",
    "start:optimized": "node --max-old-space-size=384 --gc-interval=100 server-optimized.js",
    "start:normal": "node server.js",
    "start:minimal": "node server-minimal.js",
    "dev": "npm run dev:all",
    "dev:all": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:video\" \"npm run dev:recommendation\" \"npm run dev:user\" \"npm run dev:analytics\" \"npm run dev:worker\"",
    "dev:gateway": "cd microservices/api-gateway && npm run dev",
    "dev:auth": "cd microservices/auth-service && npm run dev",
    "dev:video": "cd microservices/video-service && npm run dev",
    "dev:recommendation": "cd microservices/recommendation-service && npm run dev",
    "dev:user": "cd microservices/user-service && npm run dev",
    "dev:analytics": "cd microservices/analytics-service && npm run dev",
    "dev:worker": "cd microservices/video-service && npm run worker",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "redis:start": "docker run -d -p 6379:6379 --name vib3-redis redis:alpine",
    "rabbitmq:start": "docker run -d -p 5672:5672 -p 15672:15672 --name vib3-rabbitmq rabbitmq:3-management",
    "test": "jest",
    "build": "echo 'Building microservices...' && npm run build:all",
    "build:all": "npm run build:shared && npm run build:services",
    "build:shared": "cd shared && npm run build",
    "build:services": "for service in microservices/*; do (cd $service && npm run build); done",
    "postinstall": "mkdir -p temp"
  },
  "dependencies": {
    "@capacitor/camera": "^7.0.1",
    "@capacitor/filesystem": "^7.1.1",
    "@elastic/elasticsearch": "^8.10.0",
    "@google/generative-ai": "^0.24.1",
    "@tensorflow/tfjs-node": "^4.13.0",
    "amqplib": "^0.10.3",
    "aws-sdk": "^2.1691.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "consul": "^0.40.0",
    "dotenv": "^16.5.0",
    "elasticsearch": "^16.7.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fluent-ffmpeg": "^2.1.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.3.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "prom-client": "^14.2.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
